<h2 class="form_magrin">予定作成</h2>
<%= form_with(model: @day , local: true) do |f| %>
  <div class="mb-3 col-7 form_magrin">
    <%= f.label :tag_id,  class: "form-label"%>
    <%= f.collection_select :tag_id, tag, :id, :name, class: 'form-control'%>
  </div>
  <div class="form-group mb-3 col-sm-7 form_magrin">
    <%= f.label :event,  class: "form-label"%>
    <%= f.text_field :event, class: 'form-control'%>
  </div>
  <div class="form-group mb-3 col-sm-7 form_magrin">
    <%= f.label :price%>
    <%= f.text_field :price, class: 'form-control'%>
  </div>
  <div class="form-group mb-3 col-sm-7 form_magrin">
    <%= f.label :start_time%>
    <%= f.datetime_field :start_time, class: 'form-control'	%>
  </div>
  <div class="form-group mb-3 col-sm-7 form_magrin">
    <%= f.label :e_time%>
    <%= f.datetime_field :e_time, class: 'form-control'	%>
  </div>
  <div class ='actions form_btn'>
    <%= f.submit '作成', class: 'btn btn-primary'%>
  </div>
<%end%>
